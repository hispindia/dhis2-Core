<div id="content" align="center" style="text-align: left;">

#if( $failed == true )
<div class="header-box" align="center">
	<h3 style="text-align: left; background-color: red; color: black;">Wrong username or password</h3>
</div>
#end

<form id="loginForm" action="../../dhis-web-commons-security/login.action" method="post">
<div class="row">

<div class="col-12 text-left">

<button type="submit" class="bg-transparent font-weight-bold text-uppercase text-dark h5 mb-0 border-0">log in</button>

</div>
</div>

<div class="card-login pt-3" >

<div class="input-group" id="loginField">

<input type="text" id="j_username" name="j_username" class="username form-control border py-3 px-2 rounded-0 border-top-0 border-left-0 border-right-0" placeholder="Username" aria-label="Username"> 
</div>
<div class="input-group mt-3">

<input type="password" id="j_password" name="j_password" class="password form-control border py-3 px-2 border-top-0 border-left-0 border-right-0 rounded-0" autocomplete="off" placeholder="Password" aria-label="Password"> 
</div>
</div>
<div class="footer">
<div class="d-flex justify-content-between">
</div>
<div >
<br/>
<div id="submitDiv">
<button id="submit" type="submit" class="bg-shadow-black button4">SIGN IN</button>
<button id="reset" type="reset" class="bg-shadow-black button4">CANCEL</button>
</div>
<br/><br/><br/>

</div>


</div>
</div>

#if ( $keyConfig.selfRegistrationAllowed() )
<div class="header-box" align="center"><a href="account.action">Create an account</a></div>
